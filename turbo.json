{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["**/dist/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["**/src/**/*.ts"]
    },
    "release": {
      "dependsOn": ["^release"]
    },
    "publish": {
      "dependsOn": ["^publish", "release", "test"]
    }
  }
}
